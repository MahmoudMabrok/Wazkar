<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FortyActivity"
    android:background="@drawable/back1"
    >


    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/STEPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stpi_animDuration="252"
        app:stpi_circleRadius="3.5dp"
        app:stpi_lineMargin="5dp"

        app:stpi_lineStrokeWidth="2.2dp"
        app:stpi_showDoneIcon="false" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        android:layoutDirection="rtl"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/STEPP"
        tools:ignore="UnusedAttribute" />

















</androidx.constraintlayout.widget.ConstraintLayout>